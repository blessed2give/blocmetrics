<h1>All Applications</h1>
<div class="row">
  <div class="col-md-8">
    <% @registered_applications.each do |app| %>
      <div class="media">
        <div class="media-body">
          <div class="media-heading">
            <p><%= app.url %></p>
            <%= link_to "Delete App", app, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this app?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "Register New App", new_registered_application_path, class: 'btn btn-success' %>
  </div>
</div>
